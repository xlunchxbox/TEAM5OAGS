<h1>Testimonials</h1>


  
<table class = "table table-bordered table-striped">
	<tr>
		<th>Customer Name </th>
		<th>Testimonial</th>
	    <th>Edit</th>
	</tr>
	<% @testimonials.each do |testimonial| %>
  	<tr>
		<td>
			<%= testimonial.customer.first_name %> 
			<%= testimonial.customer.last_name %>
		</td>   
  		<td>
			<%= testimonial.content %>
		</td> 
    	<td>
			<%= link_to 'Edit', edit_testimonial_path(testimonial) %>
		</td>
	</tr>
		<% end %>
</table>
<br/>

<%= link_to 'New Testimonial', new_testimonial_path %>
